@using WebApplication1.Models;
@model Product
@{
    ViewBag.Title = "Product Details of Passed Id";
}

<h2>Product Details of Passed Id</h2>
<hr />

<div class="row">
    <div class="col-md-3">
        <ul class="list-group">
            <li class="list-group-item">Id : @Model.Id</li>
            <li class="list-group-item">Name :@Model.ProductName</li>
            <li class="list-group-item">Price :@Model.Price</li>
            <li class="list-group-item">Quantity :@Model.Quantity</li>
            <li class="list-group-item">Category Id :@Model.CategoryId</li>
            <li class="list-group-item">Category Name :@Model.Category.CategoryName</li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        @Html.ActionLink("Back to Index","Index","Products")
    </div>

</div>

