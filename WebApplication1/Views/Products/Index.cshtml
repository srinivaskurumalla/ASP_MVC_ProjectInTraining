@using WebApplication1.Models;
@model List<Product>
@{
    ViewBag.Title = "Index";
}

<h2>List Of Products</h2>
@Html.ActionLink("Add New","Create","Products",null,new {@class="btn btn-info"})
<hr />
<div class="row">
    <div class="col-md-4">
        <table class="table table-c table-hover">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    product Name
                </th>
                <th>Action</th>
            </tr>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>

                    <td>@Html.ActionLink(p.ProductName, "Details", "Products", new { id = p.Id }, null) </td>
                    <td>@Html.ActionLink("Edit","Edit","Products",new {id = p.Id}, new {@class = "btn btn-info"})
                        @Html.ActionLink("Delete","Delete","Products",new {id = p.Id}, new {@class = "btn btn-danger"})</td>
                </tr>
            }
        </table>

    </div>
</div>


